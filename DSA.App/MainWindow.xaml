<Window x:Class="DSA.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DSA.App"
        mc:Ignorable="d"
        Title="Intterra Data Shipping App" Height="600" Width="800" Background="#1E1E1E" >
    <Grid>
        <TabControl x:Name="Tabs" Background="#1E1E1E" Margin="0 0 0 50" BorderThickness="0 1 0 0">
            <TabItem Header="Authentication" >
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <Label Content="Authentication" Style="{StaticResource DarkTitle}" />
                        <Label Content="Api Key" Style="{StaticResource DarkLabel}" />
                        <TextBox Text="{Binding ApiKey, Mode=TwoWay}" Style="{StaticResource InputTextBox}" />
                        <Label Content="Api Key Secret" Style="{StaticResource DarkLabel}"/>
                        <TextBox Text="{Binding ApiKeySecret, Mode=TwoWay}" Style="{StaticResource InputTextBox}" />
                        <Button x:Name="TestApiConnectivityButton" Content="Test API Connectivity" Style="{StaticResource DarkButton}" HorizontalAlignment="Center" Click="TestApiConnectivityClick" />
                        <TextBox x:Name="TestApiConnectivityResponse" Style="{StaticResource ResultTextBox}" />
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
            <TabItem Header="Database">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <Label Content="Data" Style="{StaticResource DarkTitle}"/>
                        <Label Content="SQL Server Connection" Style="{StaticResource DarkLabel}"/>
                        <TextBox Text="{Binding AnalyticsConnectionString, Mode=TwoWay}" Style="{StaticResource InputTextBox}" />
                        <Label Content="Batch Max Record Count" Style="{StaticResource DarkLabel}"/>
                        <TextBox Text="{Binding Limit, Mode=TwoWay}" Style="{StaticResource InputTextBox}" />
                        <Button x:Name="TestDataConnectivityButton" Content="Test Data Connectivity" Click="TestDataConnectivityClick" Style="{StaticResource DarkButton}" HorizontalAlignment="Center" />
                        <TextBox x:Name="TestDataConnectivityResponse" Style="{StaticResource ResultTextBox}" />
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
            <TabItem Header="Incidents Query">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <Label Content="Incidents Query" Style="{StaticResource DarkTitle}"/>

                        <DockPanel Margin="10 0 0 5 ">
                            <Label Content="SELECT" Style="{StaticResource CodeLabel}" />
                            <TextBox Text="{Binding AnalyticsIncidentsSelect, Mode=TwoWay}" Style="{StaticResource InputTextBox}" />
                        </DockPanel>
                        <DockPanel Margin="10 0 0 5 ">
                            <Label Content="FROM" Style="{StaticResource CodeLabel}" />
                            <TextBox Text="{Binding AnalyticsIncidentsFrom, Mode=TwoWay}" Style="{StaticResource InputTextBox}" />
                        </DockPanel>
                        <DockPanel Margin="10 0 0 5 ">
                            <Label Content="WHERE" Style="{StaticResource CodeLabel}" />
                            <TextBox Text="{Binding AnalyticsIncidentsWhere, Mode=TwoWay}" Style="{StaticResource InputTextBox}" />
                        </DockPanel>
                        <DockPanel Margin="10 0 0 5 ">
                            <Label Content="ORDER BY" Style="{StaticResource CodeLabel}" />
                            <TextBox Text="{Binding AnalyticsIncidentsOrderBy, Mode=TwoWay}" Style="{StaticResource InputTextBox}" />
                        </DockPanel>

                        <Button x:Name="TestIncidentsQueryButton" Content="Test Incident Query" Click="TestIncidentsQueryClick" Style="{StaticResource DarkButton}" HorizontalAlignment="Center" />
                        <TextBox x:Name="TestIncidentsQueryResponse" Style="{StaticResource ResultTextBox}" />
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
            <TabItem Header="Units Query">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <Label Content="Units Query" Style="{StaticResource DarkTitle}"/>
                        <DockPanel Margin="10 0 0 5 ">
                            <Label Content="SELECT" Style="{StaticResource CodeLabel}" />
                            <TextBox Text="{Binding AnalyticsUnitsSelect, Mode=TwoWay}" Style="{StaticResource InputTextBox}" />
                        </DockPanel>
                        <DockPanel Margin="10 0 0 5 ">
                            <Label Content="FROM" Style="{StaticResource CodeLabel}" />
                            <TextBox Text="{Binding AnalyticsUnitsFrom, Mode=TwoWay}" Style="{StaticResource InputTextBox}" />
                        </DockPanel>
                        <DockPanel Margin="10 0 0 5 ">
                            <Label Content="WHERE" Style="{StaticResource CodeLabel}" />
                            <TextBox Text="{Binding AnalyticsUnitsWhere, Mode=TwoWay}" Style="{StaticResource InputTextBox}" />
                        </DockPanel>
                        <DockPanel Margin="10 0 0 5 ">
                            <Label Content="ORDER BY" Style="{StaticResource CodeLabel}" />
                            <TextBox Text="{Binding AnalyticsUnitsOrderBy, Mode=TwoWay}" Style="{StaticResource InputTextBox}" />
                        </DockPanel>

                        <Button x:Name="TestUnitsQueryButton" Content="Test Units Query" Click="TestUnitsQueryClick" Style="{StaticResource DarkButton}" HorizontalAlignment="Center" />
                        <TextBox x:Name="TestUnitsQueryResponse" Style="{StaticResource ResultTextBox}" />

                    </StackPanel>
                </ScrollViewer>
            </TabItem>
            <TabItem Header="Run All">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <Label Content="Run All" Style="{StaticResource DarkTitle}"/>
                        <Button x:Name="RunAllButton" Content="Upload Data" Click="RunAllClick" Style="{StaticResource DarkButton}" HorizontalAlignment="Center" />
                        <TextBox x:Name="RunAllResponse" Style="{StaticResource ResultTextBox}" />
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
            <TabItem Header="Task Scheduler">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <Label Content="Task Scheduler" Style="{StaticResource DarkTitle}"/>
                        <Label Content="Interval in Minutes" Style="{StaticResource DarkLabel}"/>
                        <TextBox Text="{Binding RunInterval, Mode=TwoWay}" Style="{StaticResource InputTextBox}" />
                        <Label Content="Password for Local User Account" Style="{StaticResource DarkLabel}"/>
                        <PasswordBox x:Name="PasswordTextBox" Background="#0F0F0F" Foreground="LightGray" BorderBrush="Gray" Margin="10 0" />
                        <Button x:Name="CreateTaskButton" Content="Schedule Task" Click="CreateTaskClick" Style="{StaticResource DarkButton}" HorizontalAlignment="Center" />
                        <TextBox x:Name="CreateTaskResponse" Style="{StaticResource ResultTextBox}" />
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
        </TabControl>
        <DockPanel VerticalAlignment="Bottom">
            <Button Content="Back" DockPanel.Dock="Left" HorizontalAlignment="Left" Style="{StaticResource DarkButton}" Click="BackButtonClick"  />
            <Button Content="Next" DockPanel.Dock="Right" HorizontalAlignment="Right" Style="{StaticResource DarkButton}" Click="NextButtonClick"  />
        </DockPanel>
    </Grid>
</Window>
