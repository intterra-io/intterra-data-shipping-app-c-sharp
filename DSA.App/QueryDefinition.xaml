<UserControl x:Class="DSA.App.QueryDefinition"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DSA.App"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <StackPanel>
            <Label Content="Data Type" Style="{StaticResource DarkLabel}" />
            <TextBox Text="{Binding Type, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"  Style="{StaticResource InputTextBox}" />
            <Label Content="Query" Style="{StaticResource DarkLabel}" />
            <TextBox Text="{Binding Query, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource InputTextBox}" VerticalScrollBarVisibility="Auto" AcceptsReturn="True" AcceptsTab="True" />
            <Grid >
                <Button x:Name="RemoveButton" Content="Remove" Click="TestIncidentsQueryClick" Style="{StaticResource DarkButton}" HorizontalAlignment="Left" />
                <Label HorizontalAlignment="Stretch"></Label>
                <Button x:Name="TestButton" Content="Test" Click="TestIncidentsQueryClick" Style="{StaticResource DarkButton}" HorizontalAlignment="Right" />
            </Grid>
        </StackPanel>   
    </Grid>
</UserControl>
